		<copy todir="${temp.dir.local_updatesite}">
			<fileset dir="${site.dir}" includes="artifacts.jar" />
			<fileset dir="${site.dir}" includes="content.jar" />
			<fileset dir="${site.dir}" includes="*.tag" />
